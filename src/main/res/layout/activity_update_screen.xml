<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blackz.crescentmca2017_2019.UpdateScreen">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/mSnackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.CoordinatorLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mSpinner"
        android:layout_marginTop="25dp"
        style="@style/spin"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="update news"
        android:id="@+id/upnews"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:drawableEnd="@drawable/update"
        android:drawableRight="@drawable/update"
        android:onClick="updateSub"
        android:text="Update"
        android:textColor="#fff"
        android:textSize="20dp" />



</LinearLayout>
