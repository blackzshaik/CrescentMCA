<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.blackz.crescentmca2017_2019.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageButton
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/btn"
    android:background="@drawable/round"
    android:layout_margin="15dp"
    android:src="@drawable/today"
        android:onClick="today" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Today"
        android:layout_below="@+id/btn"
        android:id="@+id/text"
        android:layout_marginLeft="70dp" />

    <ImageButton
        android:layout_toRightOf="@+id/btn"
        android:background="@drawable/round"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btn2"
        android:src="@drawable/all"
        android:layout_margin="15dp"
        android:onClick="allT" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Full Time Table"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/text"
        android:id="@+id/text2"/>

    <ImageButton
        android:layout_below="@+id/text2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Full Time Table"
        android:id="@+id/btn5"
        android:layout_margin="15dp"
        android:background="@drawable/round"
        android:src="@drawable/about_unknown"
        android:layout_toRightOf="@+id/about"
        android:onClick="about"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="About"
        android:layout_toRightOf="@+id/text3"
        android:layout_margin="15dp"
        android:layout_below="@+id/btn5"
        android:id="@+id/text5"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/about"
        android:onClick="newsA"
        android:src="@drawable/news"
        android:layout_margin="15dp"
        android:background="@drawable/round"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_margin="15dp"
        android:id="@+id/text3"
        android:text="News And Other Stuffs"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/text5"
        android:text="Update For Rep"
        android:textColor="#fff"
        android:id="@+id/updateRep"
        android:onClick="repUpdate"
        android:visibility="gone"
        android:drawableEnd="@drawable/update"
        android:drawableRight="@drawable/update"
        android:background="@color/colorPrimary"/>
</RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mSnackbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>